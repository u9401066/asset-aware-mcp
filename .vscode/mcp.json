{
    "servers": {
        "assetAwareMcp": {
            "type": "stdio",
            "command": "uv",
            "args": [
                "run",
                "--directory",
                "${workspaceFolder}",
                "python",
                "-m",
                "src.server"
            ],
            "env": {
                "LLM_BACKEND": "ollama",
                "OLLAMA_HOST": "http://localhost:11434",
                "OLLAMA_MODEL": "qwen2.5:7b",
                "OLLAMA_EMBEDDING_MODEL": "nomic-embed-text",
                "ENABLE_LIGHTRAG": "true",
                "DATA_DIR": "${workspaceFolder}/data"
            },
            "envFile": "${workspaceFolder}/.env"
        }
    },
    "inputs": []
}
